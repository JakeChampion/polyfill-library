{
  "env": {
    "es6": false,
    "browser": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 3,
    "sourceType": "script"
  },
  "rules": {
	"comma-dangle"          : [ 2, "never" ],
	"quote-props"           : [ 2, "as-needed", { "keywords" : true } ],
	"dot-notation"          : [ 2, { "allowKeywords" : false } ],
	"radix"                 : 2,
	"no-catch-shadow"       : 2
  },
  "root": true
}
